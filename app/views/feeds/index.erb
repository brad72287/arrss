<h3>Welcome, <%= current_user.username %>.</h3>

<ul>
<li><a href="/feeds/manage">Top Stories</a></li>
<li><a href="/feeds/manage">Manage Feeds</a></li>
<li><a href="/logout">Log Out</a></li>
</ul>

<%= "You have no feeds at the moment. You should add a feed!" if @feeds.empty? %>
<ul>
<% @feeds.all.each do |feed| %>
    <% feed = RSS::Parser.parse(feed.url) %>
    <% feed.items.each do |item| %>
        <li><%= "<a href='#{item.link}'> #{item.title} </a> (#{feed.channel.title} - #{item.pubDate.to_s})" %></li>
    <% end %>
<% end %>
</ul>