<h3>Manage Feeds</h3>

<ul>
<li><a href="/feeds/manage">Top Stories</a></li>
<li><a href="/feeds/manage">Manage Feeds</a></li>
<li><a href="/logout">Log Out</a></li>
</ul>

<form action="/feeds/manage" method="POST">
	<input type="text" name="url">
	<input type="submit" value="Add Feed">
</form>

<p>You have <%= @feeds.all.count %> feed(s).<br>
<% @feeds.all.each do |feed| %>
    <form method="POST" action="/feeds/<%= feed.id %>/delete">
	- <%= feed.url %>	<input type="submit" value="Delete">
	</form>
<% end %></p>

